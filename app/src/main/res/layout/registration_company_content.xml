<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="45dp"
    android:background="#e3f2fd">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_p_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="95dp"
                    android:layout_height="20dp"
                    android:text="Login Details"
                    android:textColor="#BDBDBD"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"/>
            </LinearLayout>
        </LinearLayout>



        <RelativeLayout
            android:id="@+id/lay_user_p_login"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/user_p_line"
            android:layout_marginRight="20dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comp_email"
                android:inputType="textEmailAddress"
                android:hint="Email ID"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent">
                <requestFocus/>
                </com.rengwuxian.materialedittext.MaterialEditText>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comp_password"
                android:layout_below="@+id/comp_email"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:hint="Password"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comp_cpassword"
                android:inputType="textPassword"
                android:layout_below="@+id/comp_password"
                android:textAlignment="center"
                android:hint="Confirm Password"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/user_p_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/lay_user_p_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="115dp"
                    android:layout_height="20dp"
                    android:text="Company Details"
                    android:textColor="#BDBDBD"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#BDBDBD"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/main_p"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/user_p_line"
            android:layout_marginRight="20dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comp_name"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:hint="Company Name"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comp_type"
                android:gravity="center"
                android:layout_below="@+id/comp_name"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Type"
                    android:layout_weight="1"/>

                <RadioGroup
                    android:id="@+id/comp_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consultancy"/>
                </RadioGroup>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/addp_lay_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comp_type"
                android:orientation="horizontal">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addp_date"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:hint="Company Start Date"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="?colorAccent"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Pick Date"
                    android:id="@+id/addp_datebtn" />

            </LinearLayout>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Industry"
                android:id="@+id/comp_ind"
                android:textAlignment="center"
                android:layout_below="@+id/addp_lay_date"
                android:layout_centerHorizontal="true"
                android:completionThreshold="1"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comp_abt"
                android:textAlignment="center"
                android:hint="About Company"
                android:layout_below="@+id/comp_ind"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/user_p_line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/l_comp_abt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BDBDBD"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="20dp"
                        android:text="Company Details"
                        android:textColor="#BDBDBD"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#BDBDBD"/>
                </LinearLayout>
            </LinearLayout>

        <RelativeLayout
            android:id="@+id/main_p1"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/user_p_line"
            android:layout_marginRight="20dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comp_add"
                android:textAlignment="center"
                android:hint="Company Address"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/comp_zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Zip Code"
                android:inputType="number"
                android:layout_below="@+id/comp_add"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/comp_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:layout_below="@+id/comp_zip"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/comp_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State"
                android:layout_below="@+id/comp_city"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/comp_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Country"
                android:layout_below="@+id/comp_state"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/comp_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Contact Number"
                android:layout_below="@+id/comp_country"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/comp_contperson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Person"
                android:layout_below="@+id/comp_phone"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            <LinearLayout
                android:id="@+id/lay_comp_logoup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/comp_contperson">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/comp_logo_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Upload Logo"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="?colorAccent"/>

                <Button
                    android:text="Browse"
                    android:id="@+id/comp_browse_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1">
                </Button>
            </LinearLayout>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have read and agreed the GetJobs Terms and Conditions"
                android:id="@+id/comp_conditions"
                android:layout_below="@+id/lay_comp_logoup"/>
        </RelativeLayout>
        <Button
            android:id="@+id/comp_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/main_p"
            />
    </LinearLayout>
</ScrollView>