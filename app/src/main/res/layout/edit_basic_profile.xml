<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:paddingBottom="50dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edit_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            <AutoCompleteTextView
                android:id="@+id/edit_user_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_weight="1"
                    android:id="@+id/edit_user_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DOB"
                    android:textAlignment="center"
                    app:met_floatingLabel="highlight"
                    app:met_primaryColor="?colorAccent"/>
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/edit_user_dob_pick"
                    android:text="Pick Date"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edit_user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edit_user_zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pin code"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edit_user_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="city"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edit_user_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edit_user_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Country"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edit_user_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact number"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>


                <AutoCompleteTextView
                    android:id="@+id/edit_user_educ"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:hint="Last Education"
                    android:layout_height="wrap_content" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edit_user_tot_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total experience"
                android:textAlignment="center"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"/>
    </LinearLayout>
</ScrollView>