<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginBottom="0dp"
    android:layout_marginTop="2dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    android:layout_marginBottom="0dp"
    card_view:contentPadding="2dp"
    card_view:cardCornerRadius="4dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:elevation="2dp"
    android:background="@drawable/myrect">

    <ImageView
        android:id="@+id/comp_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/mcd_logo"
        />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/comp_name"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FE2200"
            android:text="test company"
            android:textSize="20dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:src="@drawable/ind"
                android:layout_height="20dp" />
        <TextView
            android:id="@+id/comp_skill"
            android:textSize="13dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="min skill test"
            android:layout_weight="1"
            />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="15dp"
                android:src="@drawable/loc1"
                android:layout_height="20dp" />
        <TextView
            android:id="@+id/comp_loc"
            android:layout_marginLeft="5dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="test Location"
            android:textSize="15dp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="15dp"
                android:src="@drawable/exp1"
                android:layout_height="20dp" />
         <TextView
            android:id="@+id/comp_exp"
             android:layout_marginLeft="5dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:textSize="13dp"
            android:text="test Exp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/fav_comp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/star26"
        android:clickable="true"
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1"/>
    <ImageView
        android:src="@drawable/checked"
        android:id="@+id/apply_status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="bottom"/>
    </LinearLayout>
</LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>